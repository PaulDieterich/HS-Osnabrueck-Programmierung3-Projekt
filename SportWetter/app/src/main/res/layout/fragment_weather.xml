<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.weather.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/avgTemp"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="@string/temp_min"
        app:layout_constraintBottom_toTopOf="@+id/stadtsuche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/land"
        app:layout_constraintVertical_bias="0.245" />

    <TextView
        android:id="@+id/land"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/temp_min"
        app:layout_constraintBottom_toTopOf="@+id/stadtsuche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stadtname"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/stadtname"
        android:layout_width="239dp"
        android:layout_height="60dp"
        android:text="@string/stadtname"
        app:layout_constraintBottom_toTopOf="@+id/stadtsuche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="@string/temp_min"
        app:layout_constraintBottom_toTopOf="@+id/stadtsuche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgTemp"
        app:layout_constraintVertical_bias="0.417" />

    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="@string/temp_max"
        app:layout_constraintBottom_toTopOf="@+id/stadtsuche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgTemp"
        app:layout_constraintVertical_bias="0.417" />

    <SearchView
        android:id="@+id/stadtsuche"
        android:layout_width="411dp"
        android:layout_height="68dp"
        android:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/add"
        app:layout_constraintBottom_toTopOf="@+id/stadtname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>